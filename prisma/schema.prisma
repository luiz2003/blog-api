generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/blog.db"
}

model Post {
  id      Int     @id @default(autoincrement())
  author Author @relation(fields: [authorId], references: [id])
  authorId Int
  content String?
  categories  Category[]
  likes Likes?
}

model Author {
  id  Int @id @default(autoincrement())
  name String
  posts Post[]
}

model Category {
  id  Int @id @default(autoincrement())
  name  String
  posts Post[]
}

model Likes {
  post Post @relation(fields: [postId], references: [id])
  postId  Int @id
  amount Int
}